<article class="item-card item-description-tooltip" data-size="{{ item.data.size or 1 }}" data-tags="{{ item.data.tags | join(',') }}" {% if item.data.shortDescription %}data-description="{{ item.data.shortDescription }}"{% endif %} onclick="window.location.href='{{ environment.baseUrl }}{{ item.url }}'">
  <div class="item-category">
    {% for tag in item.data.tags %}
      {% if tag != "main" %}{{ tag }}{% endif %}
    {% endfor %}
  </div>
  
  {% if item.data.feedImages and item.data.feedImages.length > 0 %}
  <div class="item-images">
    <div class="image-carousel" data-carousel>
      {% for image in item.data.feedImages %}
        {% safeImage "./src" + image, item.data.title + " - Image " + loop.index %}
      {% endfor %}
    </div>
    {% if item.data.feedImages.length > 1 %}
    <button class="carousel-arrow carousel-prev" aria-label="Previous image">‹</button>
    <button class="carousel-arrow carousel-next" aria-label="Next image">›</button>
    <div class="carousel-nav">
      {% for image in item.data.feedImages %}
        <button class="carousel-dot{% if loop.first %} active{% endif %}" 
                data-slide="{{ loop.index0 }}" 
                aria-label="Go to slide {{ loop.index }}"></button>
      {% endfor %}
    </div>
    {% endif %}
  </div>
  {% endif %}

  <div class="item-content">
    <h2 class="item-title">{{ item.data.title }}</h2>
  </div>
</article>