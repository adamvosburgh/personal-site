<article class="item-card item-description-tooltip" data-size="{{ item.data.size or 1 }}" data-tags="{{ item.data.tags | join(',') }}" {% if item.data.shortDescription %}data-description="{{ item.data.shortDescription }}"{% endif %} onclick="window.location.href='{{ environment.baseUrl }}{{ item.url }}'">
  <div class="item-category">
    {% for tag in item.data.tags %}
      {% if tag != "main" %}{{ tag }}{% endif %}
    {% endfor %}
  </div>
  
  {% if item.data.feedImages and item.data.feedImages.length > 0 %}
  <div class="item-images">
    {% safeImage "./src" + item.data.feedImages[0], item.data.title %}
  </div>
  {% elif item.data.link %}
  <div class="item-link-preview">
    {% if "youtube.com" in item.data.link or "youtu.be" in item.data.link %}
      {% set videoId = item.data.link | replace("https://www.youtube.com/watch?v=", "") | replace("https://youtu.be/", "") | replace("&.*", "") %}
      <iframe src="https://www.youtube.com/embed/{{ videoId }}?autoplay=1&mute=1" frameborder="0" allowfullscreen></iframe>
    {% elif "drive.google.com" in item.data.link %}
      <iframe src="{{ item.data.link }}" frameborder="0"></iframe>
    {% else %}
      <iframe src="{{ item.data.link }}" frameborder="0"></iframe>
    {% endif %}
  </div>
  {% endif %}

  <div class="item-content">
    <h2 class="item-title">{{ item.data.title }}</h2>
  </div>
</article>